<% layout("/layouts/boilerplate") %>
<body>
    <form action="/listing/new" method="POST">
    <h2>add new listing :</h2>
    <br><hr><br><br>
    <input type="text" name="listing[title]" placeholder="enter title">
    <br><br>
    <textarea name="listing[description]" placeholder="add description"></textarea>
    <br><br>
    <input type="number" name="listing[price]" placeholder="add price">
    <br><br>
    <input type="url" name="listing[image]" placeholder="ad image URL/Link">
    <br><br>
    <input type="text" name="listing[country]" placeholder="enter country name">
    <br><br>
    <input type="text" name="listing[location]" placeholder="enter location">
    <br><br>
    <button >add listing</button>
    </form>
</body>
